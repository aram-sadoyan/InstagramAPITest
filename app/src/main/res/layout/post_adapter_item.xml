<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:card_view="http://schemas.android.com/tools"
	android:id="@+id/postParentContainer"
	style="@style/CardView.Light"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginTop="8dp"
	android:layout_marginBottom="8dp"
	card_view:cardCornerRadius="4dp">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/postImgView"
			android:layout_width="110dp"
			android:layout_height="110dp"
			android:background="@color/colorPrimary"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />


		<ImageView
			android:id="@+id/likeImgView"
			android:layout_width="16dp"
			android:layout_height="16dp"
			android:layout_marginTop="6dp"
			android:layout_marginBottom="6dp"
			android:layout_marginStart="6dp"
			android:layout_marginLeft="6dp"
			android:background="@drawable/ic_heart_top"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/postImgView"
			app:layout_constraintBottom_toBottomOf="parent"/>

		<TextView
			android:id="@+id/likeTxtView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:layout_marginStart="4dp"
			android:layout_marginLeft="4dp"
			android:includeFontPadding="false"
			android:text="..."
			android:textColor="@android:color/black"
			android:visibility="visible"
			app:layout_constraintStart_toEndOf="@id/likeImgView"
			app:layout_constraintTop_toBottomOf="@id/postImgView" />

		<ImageView
			android:id="@+id/commentImgView"
			android:layout_width="16dp"
			android:layout_height="16dp"
			android:layout_marginTop="6dp"
			android:layout_marginBottom="6dp"
			android:layout_marginRight="4dp"
			android:layout_marginEnd="4dp"
			android:background="@drawable/ic_comment"
			app:layout_constraintEnd_toStartOf="@id/commentTxtView"
			app:layout_constraintTop_toBottomOf="@id/postImgView" />

		<TextView
			android:id="@+id/commentTxtView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:layout_marginRight="6dp"
			android:layout_marginEnd="6dp"
			android:includeFontPadding="false"
			android:text="..."
			android:textColor="@android:color/black"
			android:visibility="visible"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@id/postImgView" />
	</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>